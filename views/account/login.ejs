<%# Content Heading %>
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<%# Flash Message %>
<%- messages() %>

<%# For Those Times When Errors Happen%>
<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>

<%# Form Content %>
<div id="login" class="formDiv">
    <form id="login_form" class="siteForms" action="/account/login" method="post">
        <label for="account_email">Email: </label>
        <input id="account_email" type="email" name="account_email" required placeholder="Enter Email" value="<%= locals.account_email %>">
        <div class="passwordFormat">
            <label for="account_password">Password: </label>
            <div>
                <input id="account_password" class="pw" type="password" name="account_password" required placeholder="Enter Password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
                <span class="pwButton">Show Password</span>
            </div>
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
        </div>
        <input type="submit" class="submitButton" name="login_submit" value="LOGIN">
    </form>
</div>

<p>No account? <a href="../../account/register">Sign-up</a></p>

<%# Scripts %>
<script src="../../js/showPassword.js"></script>