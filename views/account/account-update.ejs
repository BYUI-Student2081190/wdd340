<%# Content Heading %>
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<%# Flash Message %>
<%- messages() %>

<%# For Those Times When Errors Happen%>
<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>

<%# Form Content %>
<div id="updateAccount" class="formDiv">
    <h3>Update Information: </h3>
    <form id="account_update_form" class="siteForms" action="/account/update-information" method="post">
        <label for="account_firstname">First Name: </label>
        <input id="account_firstname" type="text" name="account_firstname" required placeholder="Enter First Name" value="<%= locals.account_firstname %>">
        <label for="account_lastname">Last Name: </label>
        <input id="account_lastname" type="text" name="account_lastname" required placeholder="Enter Last Name" value="<%= locals.account_lastname %>">
        <label for="account_email">Email Address: </label>
        <input id="account_email" type="email" name="account_email" required placeholder="Enter Valid Email" value="<%= locals.account_email %>">
        <input type="submit" id="update_account_info" class="submitButton" name="register_submit" value="Update Info" disabled>
        <input type="hidden" name="account_id"
        <% if(locals.account_id) { %> value="<%= locals.account_id %>"
        <% } %>>
    </form>
</div>

<div id="updatePassword" class="formDiv">
    <h3>Change Password: </h3>
    <form id="update_password_form" class="siteForms" action="/account/update-password" method="post">
        <div class="passwordFormat">
            <label for="account_password">Password: </label>
            <div>
                <input id="account_password" class="pw" type="password" name="account_password" required placeholder="Enter A Strong Password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
                <span class="pwButton">Show Password</span>
            </div>
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
        </div>
        <input type="submit" id="change_password" class="submitButton" name="register_submit" value="Change Password" disabled>
        <input type="hidden" name="account_id"
        <% if(locals.account_id) { %> value="<%= locals.account_id %>"
        <% } %>>
    </form>
</div>

<a href="/account/">Go Back</a>

<%# Scripts %>
<script src="../../js/showPassword.js"></script>
<script src="../../js/account-update.js"></script>